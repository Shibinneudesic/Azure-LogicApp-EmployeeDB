{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Employee Upsert Request Schema",
  "description": "Schema for validating employee upsert requests with structure and field-level validation",
  "required": ["employees"],
  "properties": {
    "employees": {
      "type": "object",
      "required": ["employee"],
      "properties": {
        "employee": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "required": ["id", "firstName", "lastName"],
            "properties": {
              "id": {
                "type": "integer",
                "minimum": 1,
                "description": "Employee ID must be a positive integer"
              },
              "firstName": {
                "type": "string",
                "minLength": 1,
                "pattern": "^(?!\\s*$).+",
                "description": "First name is required and cannot be empty or whitespace only"
              },
              "lastName": {
                "type": "string",
                "minLength": 1,
                "pattern": "^(?!\\s*$).+",
                "description": "Last name is required and cannot be empty or whitespace only"
              },
              "department": {
                "type": ["string", "null"],
                "description": "Department name (optional)"
              },
              "position": {
                "type": ["string", "null"],
                "description": "Job position/title (optional)"
              },
              "salary": {
                "type": ["number", "null"],
                "minimum": 0,
                "description": "Salary amount (optional, must be non-negative if provided)"
              },
              "email": {
                "type": ["string", "null"],
                "format": "email",
                "description": "Email address (optional, must be valid format if provided)"
              }
            },
            "additionalProperties": false
          }
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
